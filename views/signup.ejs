<div class="modal" id="signup">
        <h5 class="black-text center">Sign Up Here</h5>
       <hr>
    <div class="modal-content">
      <div class="container">
        <div class="row">
        <div class="col s6 l6">
            <a href="/auth/facebook" class="btn blue">facebook</a>
            <a href="/auth/google" class="btn red">Google</a>
        </div>
        <div class="col s6 l6">
          <form method= "POST" action="/user/profile">
            <div class="input-field">
              <i class="material-icons prefix black-text">person</i>
            <input type="text" name="username" placeholder="code ninjas">
            <label for="email">Username</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix black-text">email</i>
              <input type="email" name="email" placeholder="exaple@email.com">
              <label for="email">Enter Email</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix black-text">lock</i>
                <input type="password" name="password" placeholder="*********">
                <label for="password">Password</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix black-text">lock</i>
                <input type="password" name="confpassword" placeholder="exaple@email.com">
                <label for="email">Confirm Password</label>
            </div>
            <input type="submit" class="btn green right btn-small" value ="Sign Up">
          </form>
        </div>
      </div>
  </div>
</div>
